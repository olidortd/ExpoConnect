<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR.LoginOptionsPage"
             Title="LoginOptionsPage">
    <VerticalStackLayout>
        <Button Text="Get Catalog"
                   BackgroundColor="#6A1B9A"
             TextColor="White"
             CornerRadius="10"
              Clicked="OnGetCatalogClicked"/>

        <Button Text="Add a new item to the catalog"
             BackgroundColor="#6A1B9A"
       TextColor="White"
       CornerRadius="10"
        Clicked="OnAddNewItemClicked"/>

        <Button Text="View Catalops"
      BackgroundColor="#6A1B9A"
        TextColor="White"
        CornerRadius="10"
          Clicked="OnUsersCatalodsClicked"/>
    </VerticalStackLayout>
</ContentPage>