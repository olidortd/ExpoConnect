<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR.MainPage"
              xmlns:zxing ="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls">

   

    <ScrollView>
        <VerticalStackLayout  Padding="30" Spacing="20" VerticalOptions="Center">
            <Button Text="scan barcode" Clicked="OnScanClicked" 
                  BackgroundColor="#6A1B9A"
                  TextColor="White"
                  CornerRadius="10"></Button>
            <Label x:Name="RsultLabel" Text="Noting has been scanned yet" FontSize="18"></Label>

            <Button Text="Register" Clicked="OnRegisterClicked" Margin="0,40,0,0"  
                 BackgroundColor="#6A1B9A"
                TextColor="White"
                CornerRadius="10"/>
            <Button Text="Conect" Clicked="ConnectToDatabase" Margin="0,70,0,0"
                 BackgroundColor="#6A1B9A"
                TextColor="White"
                CornerRadius="10"/>
            <Button Text="Log in" Clicked="OnLoginClicked" Margin="0,90,0,0" 
                BackgroundColor="#6A1B9A"
                TextColor="White"
                CornerRadius="10"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
