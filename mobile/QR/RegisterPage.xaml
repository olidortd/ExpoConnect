<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Label 
            Text="Creat Account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"></Entry>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword ="True"></Entry>
        <Entry x:Name="DisplayNameEntry" Placeholder="Display Name" ></Entry>
        <Button Text="Submit" Clicked="OnSubmitClicked"/>
    </VerticalStackLayout>
</ContentPage>