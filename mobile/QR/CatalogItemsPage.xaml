<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR.CatalogItemsPage"
             Title="Catalog details">

    <CollectionView x:Name="ItemsCollection"
                    Margin="10">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5"
                       Padding="10"
                       CornerRadius="12"
                       HasShadow="True"
                       BorderColor="#cccccc">

                    <Grid ColumnDefinitions="100,*"
                          RowDefinitions="Auto,Auto,Auto">

                        <Image Grid.RowSpan="3"
                               WidthRequest="90"
                               HeightRequest="90"
                               Margin="0,0,10,0"
                               Aspect="AspectFill"
                               Source="{Binding ImageUrl}" />

                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               FontAttributes="Bold"
                               FontSize="18" />

                        <Label Grid.Column="1"
                               Grid.Row="1"
                               Text="{Binding Category}"
                               TextColor="Gray" />

                        <Label Grid.Column="1"
                               Grid.Row="2"
                               Text="{Binding Price, StringFormat='מחיר: {0:F2} ₪'}"
                               TextColor="Green"
                               FontAttributes="Bold" />

                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>